<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/dynamic_create_template_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/colorBlue"
        app:boxStrokeWidthFocused="1dp"
        app:hintTextColor="@color/black"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusTopStart="28dp"
        app:expandedHintEnabled="false"
        android:layout_toStartOf="@id/delete_field_iv"
        android:paddingEnd="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dynamic_create_template_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorGreyText"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textEmailAddress"
            android:hint="@string/text_hint"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/delete_field_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:background="@drawable/circle_shape_solid"
        android:backgroundTint="@color/colorBlue"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13.5dp"/>

</RelativeLayout>