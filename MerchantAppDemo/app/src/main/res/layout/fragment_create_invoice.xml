    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.createInvoice.CreateInvoiceFragment"
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
    android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/importTemplte_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:hint="Import Template"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/ci_import"
                android:drawablePadding="2dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/merchant_name_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Merchant Name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_below="@id/importTemplte_btn"
                android:layout_toLeftOf="@id/add_logo_tv"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/merchant_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:hint="@string/text_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/add_logo_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/importTemplte_btn"
                android:layout_alignTop="@id/merchant_name_tv"
                android:layout_alignBottom="@id/merchant_name_tv"
                android:layout_alignParentRight="true"
                android:text="Add Logo"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ci_add"
                android:drawablePadding="2dp"/>

            <ImageView
                android:id="@+id/add_logo_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorlightgrey"
                android:visibility="invisible"
                android:layout_below="@id/importTemplte_btn"
                android:scaleType="fitXY"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/header_createInvoice_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Header"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                android:layout_below="@id/add_logo_iv"
                android:layout_marginTop="10dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/header_createInvoice_et"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:gravity="start|top"
                    android:hint="@string/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/customField_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/header_createInvoice_tv"/>

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorlightgrey"
                android:layout_below="@id/customField_ll"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/customer_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_1"
                android:layout_marginTop="5dp"
                android:text="Customer Details"
                android:textColor="@color/colorBlue"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_name_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_below="@id/customer_detail_tv"
                android:layout_marginTop="8dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:hint="@string/text_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_address_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_below="@id/customer_name_tv"
                android:layout_marginTop="12dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:gravity="start|top"
                    android:hint="@string/text_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_contact_no_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact no"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_below="@id/customer_address_tv"
                android:layout_marginTop="12dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_contact_no_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="phone"
                    android:hint="@string/text_hint"
                    android:maxLength="15"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_email_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusTopStart="28dp"
                android:layout_below="@id/customer_contact_no_tv"
                android:layout_marginTop="12dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/text_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addedItem_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/customer_email_tv"
                android:visibility="visible"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/add_item_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addedItem_rv"
                android:layout_centerHorizontal="true"
                android:text="Add item"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ci_add"
                android:drawablePadding="2dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/tax_and_total_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_item_btn"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/tax_and_discount_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_item_discount_tv"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Discount %"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/colorBlue"
                    app:boxStrokeWidthFocused="1dp"
                    app:hintTextColor="@color/black"
                    app:boxCornerRadiusBottomEnd="28dp"
                    app:boxCornerRadiusBottomStart="28dp"
                    app:boxCornerRadiusTopEnd="28dp"
                    app:boxCornerRadiusTopStart="28dp"
                    android:layout_marginTop="12dp"
                    app:expandedHintEnabled="false"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_item_discount_et"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorGreyText"
                        android:textCursorDrawable="@null"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/text_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_item_tax_tv"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tax %"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/colorBlue"
                    app:boxStrokeWidthFocused="1dp"
                    app:hintTextColor="@color/black"
                    app:boxCornerRadiusBottomEnd="28dp"
                    app:boxCornerRadiusBottomStart="28dp"
                    app:boxCornerRadiusTopEnd="28dp"
                    app:boxCornerRadiusTopStart="28dp"
                    android:layout_marginTop="12dp"
                    app:expandedHintEnabled="false"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_item_tax_et"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorGreyText"
                        android:textCursorDrawable="@null"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/text_hint"/>
                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_total_tv"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/colorBlue"
                    app:boxStrokeWidthFocused="1dp"
                    app:hintTextColor="@color/black"
                    app:boxCornerRadiusBottomEnd="28dp"
                    app:boxCornerRadiusBottomStart="28dp"
                    app:boxCornerRadiusTopEnd="28dp"
                    app:boxCornerRadiusTopStart="28dp"
                    android:layout_marginTop="12dp"
                    app:expandedHintEnabled="false"
                    android:layout_weight="1"
                    android:layout_below="@id/tax_and_discount_ll">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_total_value_tv"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/colorGreyText"
                        android:textCursorDrawable="@null"
                        android:singleLine="true"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:drawableRight="@drawable/ci_usd"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tax_value_tv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_grey_outline"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tax_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/tax_value_tv"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tax_title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax rate 10%"
                    android:textColor="@color/colorlightgrey"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/tax_value_tv"
                    android:layout_below="@id/tax_title_tv"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/amount_total_value_tv_"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_grey_outline"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/tax_value_tv"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/amount_total_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/amount_total_value_tv"
                    android:layout_alignTop="@+id/amount_total_value_tv"
                    android:layout_alignBottom="@+id/amount_total_value_tv"
                    android:gravity="center_vertical"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/footer_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Footer"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/colorBlue"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/black"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                android:layout_below="@id/tax_and_total_rl"
                android:layout_marginTop="10dp"
                app:expandedHintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/footer_et"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textColor="@color/colorGreyText"
                    android:textCursorDrawable="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:gravity="start|top"
                    android:hint="@string/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/footer_tv"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="save as draft"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorBlue"
                    app:cornerRadius="28dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reset_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reset"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorRed"
                    app:cornerRadius="28dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="view invoice"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@color/colorBlue"
                    app:cornerRadius="28dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

<!--</RelativeLayout>-->