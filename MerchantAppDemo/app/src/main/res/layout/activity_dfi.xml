<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".Dfi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:tint="@color/black"
            android:scrollX="10dp"
            android:padding="2dp"/>
        <ImageView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/td_bank"
            />
        <View
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorlightgrey"/>

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/merchant_details_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/back">

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Globe Enterprise"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchant_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/merchant_name"
                android:layout_toStartOf="@id/merchant_logo"
                android:paddingEnd="8dp"
                android:text="hshsbvjhb hdbeb edghe\nuiwehduehduh\nnnhbchcb \nggdgvdg egywun ugcb jhqsdbcjhb \nyuedguebd yugdc \nyuegdue"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/merchant_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view_merchant"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/merchant_details_rl"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorlightgrey" />

        <LinearLayout
            android:id="@+id/customer_detail_and_invoice_detail_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_merchant"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/customer_detail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bill_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill to"
                    android:textColor="@color/colorBlue" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bill_to"
                    android:text="Simanjit Nayak"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_name"
                    android:text="hshsbvjhb hdbeb edghe\nuiwehduehduh\nnnhbchcb \nggdgvdg egywun ugcb jhqsdbcjhb \nyuedguebd yugdc \nyuegdue"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/customer_contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_address"
                    android:text="8763748374"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/customer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_contact_no"
                    android:text="rsdevelopment@gmail.com"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invoice_detail_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="2"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/invoice_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice No: "
                    android:textColor="@color/colorBlue" />

                <TextView
                    android:id="@+id/invoice_no_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invoice_no_tv"
                    android:text="Idch879whcd"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/invoice_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invoice_no_value"
                    android:layout_marginTop="8dp"
                    android:text="Invoice Date: "
                    android:textColor="@color/colorBlue" />

                <TextView
                    android:id="@+id/invoice_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/invoice_date_tv"
                    android:text="09-feb-2024"
                    android:textColor="@color/black" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_customer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/customer_detail_and_invoice_detail_ll"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorlightgrey" />

        <TextView
            android:id="@+id/item_detail_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_customer"
            android:text="Item details"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/invoiceItem_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_detail_header"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/subtotal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoiceItem_rv"
            android:text="Subtotal"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/subtotal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoiceItem_rv"
            android:layout_alignParentRight="true"
            android:text="4200"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtotal_tv"
            android:text="Discount"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtotal_tv"
            android:layout_alignParentRight="true"
            android:text="4200"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tax_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discount_tv"
            android:text="Tax"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tax_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discount_tv"
            android:layout_alignParentRight="true"
            android:text="4200"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <View
            android:id="@+id/view_tax"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tax_tv"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorlightgrey" />

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_tax"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_tax"
            android:layout_alignParentRight="true"
            android:text="4200"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_total"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/total_tv"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorlightgrey" />

        <TextView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_total"
            android:text="avcg jhdch jhdcjhbqhc cghbc uiehdcb hcjhb"
            android:textColor="@color/colorGreyText"
            android:textSize="11dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/footer"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_invoice_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="pay"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:backgroundTint="@color/colorBlue"
                app:cornerRadius="28dp" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
