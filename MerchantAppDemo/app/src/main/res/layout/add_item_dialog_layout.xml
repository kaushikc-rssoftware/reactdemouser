<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="40dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/item_tv"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product/Service"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/colorBlue"
                        app:boxStrokeWidthFocused="1dp"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:expandedHintEnabled="false"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                    android:layout_marginTop="15dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/item_et"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textColor="@color/colorGreyText"
                            android:textCursorDrawable="@null"
                            android:singleLine="true"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:hint="@string/text_hint"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/unit_and_unitprice_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/item_tv"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/quantity_tv"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Unit"
                            android:textColorHint="@color/black"
                            app:boxStrokeColor="@color/colorBlue"
                            app:boxStrokeWidthFocused="1dp"
                            app:hintTextColor="@color/black"
                            app:boxCornerRadiusBottomEnd="28dp"
                            app:boxCornerRadiusBottomStart="28dp"
                            app:boxCornerRadiusTopEnd="28dp"
                            app:boxCornerRadiusTopStart="28dp"
                            android:layout_marginTop="12dp"
                            app:expandedHintEnabled="false"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/quantity_et"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:textColor="@color/colorGreyText"
                                android:textCursorDrawable="@null"
                                android:singleLine="true"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:hint="@string/text_hint"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/price_tv"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Unit Price"
                            android:textColorHint="@color/black"
                            app:boxStrokeColor="@color/colorBlue"
                            app:boxStrokeWidthFocused="1dp"
                            app:hintTextColor="@color/black"
                            app:boxCornerRadiusBottomEnd="28dp"
                            app:boxCornerRadiusBottomStart="28dp"
                            app:boxCornerRadiusTopEnd="28dp"
                            app:boxCornerRadiusTopStart="28dp"
                            android:layout_marginTop="12dp"
                            app:expandedHintEnabled="false"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/price_et"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:textColor="@color/colorGreyText"
                                android:textCursorDrawable="@null"
                                android:singleLine="true"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:hint="@string/text_hint"
                                android:drawableRight="@drawable/ci_usd"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/amount_tv"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/colorBlue"
                        app:boxStrokeWidthFocused="1dp"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        android:layout_below="@id/unit_and_unitprice_ll"
                        app:expandedHintEnabled="false"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/amount_value_tv"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textColor="@color/colorGreyText"
                            android:textCursorDrawable="@null"
                            android:singleLine="true"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:enabled="false"
                            android:drawableRight="@drawable/ci_usd"/>
                    </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/amount_tv"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel_item_value_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="cancel"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/colorRed"
                        app:cornerRadius="28dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="9dp"
                        android:layout_marginStart="19dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_item_value_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        app:backgroundTint="@color/colorBlue"
                        app:cornerRadius="28dp"
                        android:layout_weight="1"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="19dp"/>
                </LinearLayout>

            </RelativeLayout>


    </androidx.cardview.widget.CardView>


    </RelativeLayout>