<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".ui.manageTemplates.CreateTemplateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/template_name_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Template Name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/colorBlue"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusTopStart="28dp"
            android:layout_marginTop="15dp"
            app:expandedHintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/template_name_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorGreyText"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="@string/text_hint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:layout_below="@id/template_name_tv"
            android:layout_marginTop="2dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/merchant_name_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Merchant Name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/colorBlue"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusTopStart="28dp"
            android:layout_below="@id/view_divider"
            android:layout_toLeftOf="@id/add_logo_tv"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:expandedHintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/merchant_name_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorGreyText"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="@string/text_hint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/add_logo_tv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider"
            android:layout_alignTop="@id/merchant_name_tv"
            android:layout_alignBottom="@id/merchant_name_tv"
            android:layout_alignParentRight="true"
            android:text="Add Logo"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ci_add"
            android:drawablePadding="2dp"/>

        <ImageView
            android:id="@+id/add_logo_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorlightgrey"
            android:visibility="invisible"
            android:layout_below="@id/view_divider"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/header_create_template_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Header"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/colorBlue"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            android:layout_below="@id/add_logo_iv"
            android:layout_marginTop="15dp"
            app:expandedHintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/header_create_template_et"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textColor="@color/colorGreyText"
                android:textCursorDrawable="@null"
                android:paddingTop="8dp"
                android:paddingBottom="5dp"
                android:gravity="start|top"
                android:hint="@string/text_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/customField_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_create_template_tv"
            android:orientation="vertical" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/custom_fields_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Custom Fields"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/colorBlue"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusTopStart="28dp"
            android:layout_marginTop="15dp"
            app:expandedHintEnabled="false"
            android:layout_below="@id/customField_ll"
            android:layout_toLeftOf="@id/add_item_iv"
            android:layout_marginRight="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_fields_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorGreyText"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="@string/text_hint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/add_item_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:layout_alignBottom="@id/custom_fields_tv"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_shape_solid"
            android:backgroundTint="@color/colorBlue"
            android:src="@drawable/ic_baseline_add_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/footer_create_template_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Footer"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/colorBlue"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            android:layout_below="@id/custom_fields_tv"
            android:layout_marginTop="15dp"
            app:expandedHintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/footer_create_template_et"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textColor="@color/colorGreyText"
                android:textCursorDrawable="@null"
                android:paddingTop="8dp"
                android:paddingBottom="5dp"
                android:gravity="start|top"
                android:hint="@string/text_hint" />
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/footer_create_template_tv">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_template_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:backgroundTint="@color/colorBlue"
            app:cornerRadius="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
